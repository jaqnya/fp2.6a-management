   WAIT WINDOW "╜ EL NOMBRE DEL MOTIVO NO PUEDE QUEDAR EN BLANCO !"
   RETURN .F.
ELSE
   IF plAdding
      SELECT motivocl
      SET ORDER TO TAG indice2 OF motivocl.cdx

      IF SEEK(m.nombre)
         WAIT WINDOW "╜ ESTE NOMBRE YA HA SIDO CARGADO !"
         WAIT WINDOW ALLTRIM(STR(motivocl.codigo, 4)) + " - " + ALLTRIM(motivocl.nombre)

         SELECT (pnSelect)
