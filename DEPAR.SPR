   WAIT WINDOW "╜ EL NOMBRE DEL DEPARTAMENTO NO PUEDE QUEDAR EN BLANCO !"
   RETURN .F.
ELSE
   IF plAdding
      SELECT depar
      SET ORDER TO TAG indice2 OF depar.cdx

      IF SEEK(m.nombre)
         WAIT WINDOW "╜ ESTE NOMBRE YA HA SIDO CARGADO !"
         WAIT WINDOW ALLTRIM(STR(depar.codigo, 3)) + " - " + ALLTRIM(depar.nombre)

